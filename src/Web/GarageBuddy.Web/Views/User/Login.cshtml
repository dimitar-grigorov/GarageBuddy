@model LoginFormModel

@{
    Layout = "_LayoutLoginRegister";
    ViewData["Title"] = "Login";
}

<div id="auth">
    <div class="row h-100">
        <div class="col-lg-5 col-12">
            <div id="auth-left">
                <div class="auth-logo row">
                    <div class="col-md-8">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/themes/mazer/dist/assets/compiled/svg/logo.svg" alt="Logo" />
                        </a>
                    </div>
                    <div class="col-md-4">
                        <partial name="_ThemeTogglePartial" />
                    </div>
                </div>
                <h1 class="auth-title">Log in.</h1>
                <p class="auth-subtitle mb-5">
                    Log in with your data that you entered during registration.
                </p>

                <form asp-controller="User" asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group position-relative has-icon-left mb-4">
                        <input type="text" class="form-control form-control-xl" asp-for="@Model.Email"
                               placeholder="e-mail" autocomplete="email" aria-required="true" />
                        <div class="form-control-icon">
                            <i class="bi bi-person"></i>
                        </div>
                        <span class="form-text text-danger" asp-validation-for="@Model.Email"></span>
                    </div>
                    <div class="form-group position-relative has-icon-left mb-4">
                        <input type="password" class="form-control form-control-xl" asp-for="@Model.Password"
                               placeholder="Password" autocomplete="current-password" aria-required="true" />
                        <div class="form-control-icon">
                            <i class="bi bi-shield-lock"></i>
                        </div>
                        <span class="form-text text-danger" asp-validation-for="@Model.Password"></span>
                    </div>
                    <div class="form-check form-check-lg d-flex align-items-end">
                        <input class="form-check-input me-2" type="checkbox" value="" id="flexCheckDefault" asp-for="@Model.RememberMe" />
                        <label class="form-check-label text-gray-600" for="flexCheckDefault" asp-for="@Model.RememberMe">
                            Keep me logged in
                        </label>
                    </div>
                    <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Log in</button>
                </form>
                <div class="text-center mt-5 text-lg fs-4">
                    <p class="text-gray-600">
                        Don't have an account?
                        <a class="font-bold" asp-controller="User" asp-action="Register">Register</a>
                    </p>
                    <p>
                        <a class="font-bold" asp-controller="User" asp-action="ForgotPassword">Forgot password?</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-7 d-none d-lg-block">
            <div id="auth-right"></div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
